<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Task List</title>
        <link rel="stylesheet" href="/style.css" />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
        />
    </head>
    <body>
        <header>
            <% if (task == null) {%>
            <h1>TASK LIST</h1>
            <form action="/create" method="post">
                <input
                    type="text"
                    name="task"
                    id="task"
                    placeholder="Inserir nova tarefa"
                />
                <button id="add-button" type="submit">Adicionar</button>
            </form>

            <%} else { %>
            <h1>UPDATE TASK</h1>
            <form action="/update/<%= task._id %>" method="post">
                <input
                    type="text"
                    name="task"
                    id="task"
                    value="<%= task.task %>"
                />
                <button id="update-button" type="submit">Atualizar</button>
            </form>

            <% } %>
        </header>
        <section id="task-list">
            <ul>
                <% taskList.forEach((loop_task) => {%>
                <li>
                    <div>
                        <a href="/"> <%= loop_task.task %> </a>
                        <span>
                            Adicionada em: <%=
                            loop_task.date.toLocaleDateString("pt-BR")%>
                        </span>
                    </div>
                    <div>
                        <a
                            class="btn-update"
                            href="/getById/<%= loop_task._id %>/update"
                            ><i class="bi bi-pencil-square"></i
                        ></a>
                        <a
                            class="btn-delete"
                            href="/getById/<%= loop_task._id %>/delete"
                            ><i class="bi bi-trash"></i
                        ></a>
                    </div>
                </li>
                <% }) %>
            </ul>
        </section>

        <% if(taskDelete != null) {%>

        <section id="modal"> 
            <div id="card">
                <div id="window-head">
                    <h2>Confirmação</h2>
                    <a id="close-btn" href="/"
                        ><i class="bi bi-x"></i></i
                    ></a>
                </div>
                <hr />
                <p>Deseja realmente apagar a tarefa "<%= taskDelete.task %>"?</p>
                <div id ="btns">
                    <a id="btn-not" href="/">Não</a>
                    <a id="btn-yes" href="/delete/<%= taskDelete.task %>">Sim</a>
                </div>
            </div>
        </section>

        <% } %>
    </body>
</html>
